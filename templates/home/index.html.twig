{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}

<div class="main-home">
  <!-- Slideshow container -->
  <div class="slideshow-container">

      <!-- Full-width images with number and caption text -->
      <div class="mySlides fade-homeMade">
        <img src="{{ asset('build/images/tool1.jpg') }}" style="width:100%">
      </div>
    
      <div class="mySlides fade-homeMade">
        <img src="{{ asset('build/images/tool2.jpg') }}" style="width:100%">
      </div>
    
      <div class="mySlides fade-homeMade">
        <img src="{{ asset('build/images/tool3.jpg') }}" style="width:100%">
      </div>
    
      <!-- Next and previous buttons -->
      <a class="prev">&#10094;</a>
      <a class="next">&#10095;</a>
    </div>
    <br>
    
    <!-- The dots/circles -->
    <div style="text-align:center">
      <span class="dot"></span>
      <span class="dot"></span>
      <span class="dot"></span>
    </div> 

    <h1>Notre sélection maison</h1>
    <h2>Plein de produits pour vous réunis ici</h2>

    <div class="scrollmenu-home">
      {% for product in products %}
        <div class="test-scroll">
          <a href="#">
            <img src="{{ product.image }}" width="100px" alt="">
            <p class="product-name text-dark">{{ product.name }}</p>
            <p class="price text-dark">{{product.price}}€</p>
          </a>
        </div>
      {% endfor %}
    </div>

    <h1>Notre sélection maison</h1>
    <h2>Plein de produits pour vous réunis ici</h2>

    <div class="scrollmenu-home">
      {% for product in products %}
        <div class="test-scroll">
          <a href="#">
            <img src="{{ product.image }}" width="50px" alt="">
            <p class="text-dark">{{ product.name }}</p>
            <p class="price text-dark">{{product.price}}€</p>
          </a>
        </div>
      {% endfor %}
    </div>

  <div class="img-soldes">
    <img src="{{ asset('build/images/soldes.png') }}" width="100%" alt="soldes">
  </div>
</div>

{% endblock %}
